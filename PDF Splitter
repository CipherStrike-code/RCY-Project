# import the different libaries needed
import PyPDF2
import openpyxl
import tkinter as tk


# Create a window for pdf splitter
def window():
    root = tk.Tk()
    root.title("PDF Splitter v1.0")
    root.geometry("800x500")

    top_frame = tk.Frame(root, bg="lightgreen", pady=1)
    top_frame.pack(side=tk.TOP, fill=tk.X)

    text_inside_frame = tk.Label(
        top_frame,
        text="Instructions:\n"
        "1. Please select the Excel Sheet that you want to use.\n"
        "2. Please select the PDF document that you want to split.\n"
        "3. Select the column and rows you want to select from.\n"
        "4. Select the folder you want the new PDF to be created in.\n"
        "5. Click the split button and wait.",
        font=("Arial", 12, "bold"),
        bg="lightgreen",
        justify="left",
    )

    text_inside_frame.pack(padx=5, pady=5, anchor="w")

    # Create a new frame for Func selection
    func_frame = tk.Frame(root, bg="violet", bd=2, relief="solid", pady=5, padx=200)
    func_frame.pack(side="top", pady=(10, 0))

    # Create a frame for Excel selection within func_frame
    excel_frame = tk.Frame(func_frame, bg="violet", pady=5)
    excel_frame.pack(side="top", pady=(0, 10))

    # Label and Button for selecting the Excel sheet
    excel_text = tk.Label(
        excel_frame,
        text="Select the Excel File to Split: ",
        font=("Arial", 13),
        bg="violet",
    )
    excel_text.pack(side="left", padx=10, pady=5)

    excel_button = tk.Button(
        excel_frame,
        text="Select Excel File",
        font=("Arial", 10),
        height=2,
        width=15,
    )
    excel_button.pack(side="left", padx=(0, 10), pady=5)

    # Create a frame for PDF selection within func_frame
    pdf_frame = tk.Frame(func_frame, bg="violet", pady=5)
    pdf_frame.pack(side="top")

    # Label and Button for selecting the PDF file
    pdf_text = tk.Label(
        pdf_frame,
        text="Select the PDF File to Split: ",
        font=("Arial", 13),
        bg="violet",
    )
    pdf_text.pack(side="left", padx=10, pady=5)

    pdf_button = tk.Button(
        pdf_frame,
        text="Select PDF File",
        font=("Arial", 10),
        height=2,
        width=15,
    )
    pdf_button.pack(side="left", padx=(0, 4))

    root.mainloop()

    # Button for selecting the excel sheet


window()
